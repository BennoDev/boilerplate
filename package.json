{
  "name": "__boilerplate__",
  "version": "0.0.1",
  "description": "NestJS setup - monorepo, logging, postgres and redis included",
  "author": "BennoDev",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format:check": "prettier -c \"**/*.ts\"",
    "format:fix": "prettier -c  --write \"**/*.ts\"",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=local nest start --watch",
    "start:dev:clean": "yarn db:drop && yarn db:migrate && yarn db:seed:all && yarn start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "test": "cross-env NODE_ENV=test jest --maxWorkers=2 --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --forceExit",
    "test:cov": "cross-env NODE_ENV=test jest --coverage --forceExit",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --forceExit",
    "docker:start": "docker compose -f ./docker/docker-compose.yml up -d",
    "docker:stop": "docker compose -f ./docker/docker-compose.yml stop",
    "db:debug": "mikro-orm debug",
    "db:drop": "mikro-orm schema:drop --fk-checks --drop-migrations-table -r",
    "db:rollup": "yarn db:drop && yarn db:migrate",
    "db:migrate": "mikro-orm migration:up",
    "db:migrate:revert": "mikro-orm migration:down",
    "db:migrate:generate": "mikro-orm migration:create",
    "db:migrate:create": "mikro-orm migration:create -b",
    "db:seed": "cross-env TARGET=seeds-dev mikro-orm migration:up",
    "db:seed:create": "cross-env TARGET=seeds-dev mikro-orm migration:create -b",
    "db:seed:revert": "cross-env TARGET=seeds-dev mikro-orm migration:down",
    "db:seed:stag": "cross-env TARGET=seeds-stag mikro-orm migration:up",
    "db:seed:stag:create": "cross-env TARGET=seeds-stag mikro-orm migration:create -b",
    "db:seed:stag:revert": "cross-env TARGET=seeds-stag mikro-orm migration:down",
    "db:seed:prod": "cross-env TARGET=seeds-prod mikro-orm migration:up",
    "db:seed:prod:create": "cross-env TARGET=seeds-prod mikro-orm migration:create -b",
    "db:seed:prod:revert": "cross-env TARGET=seeds-prod mikro-orm migration:down",
    "deps:update:check": "ncu",
    "deps:update:fix": "ncu -u"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.6",
    "@mikro-orm/core": "^4.5.6",
    "@mikro-orm/nestjs": "^4.2.0",
    "@mikro-orm/postgresql": "^4.5.6",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/common": "^7.6.17",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.17",
    "@nestjs/platform-express": "^7.6.17",
    "@nestjs/swagger": "^4.8.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "connect-redis": "^6.0.0",
    "date-fns": "^2.22.1",
    "dotenv-safe": "^8.2.0",
    "express-basic-auth": "^1.2.0",
    "express-rate-limit": "^5.2.6",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "pino": "^6.11.3",
    "pino-pretty": "^5.0.2",
    "ramda": "^0.27.1",
    "rate-limit-redis": "^2.1.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.1.0",
    "swagger-ui-express": "^4.1.6",
    "throng": "^5.0.0",
    "ts-node": "^10.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.17",
    "@types/bcrypt": "^5.0.0",
    "@types/cls-hooked": "^4.3.3",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.16",
    "@types/dotenv-safe": "^8.1.1",
    "@types/express": "^4.17.12",
    "@types/express-rate-limit": "^5.1.2",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/pino": "^6.3.8",
    "@types/ramda": "^0.27.40",
    "@types/rate-limit-redis": "^1.7.1",
    "@types/redis": "^2.8.29",
    "@types/throng": "^5.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "faker": "^5.5.3",
    "jest": "^27.0.4",
    "npm-check-updates": "^11.6.0",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-mockito": "^2.6.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@libs/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@libs/logger": "<rootDir>/libs/logger/src",
      "@libs/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@libs/common": "<rootDir>/libs/common/src",
      "@libs/models/(.*)": "<rootDir>/libs/models/src/$1",
      "@libs/models": "<rootDir>/libs/models/src",
      "@libs/testing/(.*)": "<rootDir>/libs/testing/src/$1",
      "@libs/testing": "<rootDir>/libs/testing/src"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./data/data.config.ts"
    ]
  }
}
