{
    "name": "boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "start": "nx serve",
        "build": "nx build",
        "lint": "nx lint",
        "lint:all": "nx run-many --target=lint --all",
        "test": "nx test",
        "test:all": "nx run-many --target=test --all --parallel=1 --skip-nx-cache",
        "test:raw": "cross-env NODE_ENV=test jest --forceExit",
        "db:debug": "mikro-orm debug",
        "db:drop": "mikro-orm schema:drop --fk-checks --drop-migrations-table -r",
        "db:rollup": "yarn db:drop && yarn db:migrate",
        "db:migrate": "mikro-orm migration:up",
        "db:migrate:create": "mikro-orm migration:create -b",
        "db:migrate:generate": "mikro-orm migration:create",
        "db:migrate:revert": "mikro-orm migration:down",
        "db:migrate:pending": "mikro-orm migration:pending",
        "db:seed": "mikro-orm seeder:run",
        "db:seed:create": "mikro-orm seeder:create",
        "docker:start": "docker compose -f ./docker/docker-compose.yml up -d",
        "docker:stop": "docker compose -f ./docker/docker-compose.yml stop",
        "deps:update:check": "ncu",
        "deps:update:fix": "ncu -u",
        "prepare": "husky"
    },
    "private": true,
    "dependencies": {
        "@mikro-orm/core": "^6.4.15",
        "@mikro-orm/nestjs": "^6.1.1",
        "@mikro-orm/postgresql": "^6.4.15",
        "@mikro-orm/sql-highlighter": "^1.0.1",
        "@nestjs/common": "^11.1.2",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.2",
        "@nestjs/platform-express": "^11.1.2",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/throttler": "^6.4.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "compression": "^1.8.0",
        "connect-redis": "^9.0.0",
        "date-fns": "^4.1.0",
        "express-basic-auth": "^1.2.1",
        "express-session": "^1.18.1",
        "helmet": "^8.1.0",
        "ioredis": "^5.6.1",
        "nestjs-throttler-storage-redis": "^0.5.1",
        "pino": "^9.7.0",
        "pino-pretty": "^13.0.0",
        "ramda": "^0.30.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "swagger-ui-express": "^5.0.1",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@faker-js/faker": "^9.8.0",
        "@mikro-orm/cli": "^6.4.15",
        "@mikro-orm/migrations": "^6.4.15",
        "@mikro-orm/seeder": "^6.4.15",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.2",
        "@nx/eslint": "20.8.1",
        "@nx/eslint-plugin": "20.8.1",
        "@nx/jest": "20.8.1",
        "@nx/js": "20.8.1",
        "@nx/nest": "20.8.1",
        "@nx/node": "20.8.1",
        "@nx/webpack": "20.8.1",
        "@nx/workspace": "20.8.1",
        "@swc-node/register": "1.10.10",
        "@swc/core": "1.12.1",
        "@types/compression": "^1.8.1",
        "@types/dotenv-safe": "^8.1.6",
        "@types/express-session": "^1.18.2",
        "@types/jest": "^29.5.14",
        "@types/node": "20.12.12",
        "@types/ramda": "^0.30.2",
        "cross-env": "^7.0.3",
        "dotenv-safe": "^9.1.0",
        "eslint": "~9.27.0",
        "eslint-import-resolver-typescript": "^4.4.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-unicorn": "^59.0.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-node": "^29.7.0",
        "jest-mock-extended": "^3.0.7",
        "lint-staged": "^16.1.2",
        "npm-check-updates": "^18.0.1",
        "nx": "20.8.1",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.4",
        "ts-node": "10.9.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "8.32.1",
        "url-loader": "^4.1.1",
        "webpack-cli": "^6.0.1"
    },
    "mikro-orm": {
        "tsConfigPath": "./tsconfig.base.json",
        "configPaths": [
            "./data/data.config.ts"
        ]
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --cache --fix"
        ],
        "*.{js,ts,css,md,json}": "yarn nx format:write --uncommitted"
    }
}
