{
    "name": "boilerplate",
    "version": "0.0.1",
    "description": "NestJS setup - monorepo, logging, database access and http server included",
    "author": "BennoDev",
    "private": true,
    "license": "MIT",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format:check": "prettier -c \"**/*.ts\" \"**/*.js\"",
        "format:fix": "prettier -c  --write \"**/*.ts\" \"**/*.js\"",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=local nest start --watch",
        "start:dev:clean": "yarn db:drop && yarn db:migrate && yarn db:seed:all && yarn start:dev",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/api/main",
        "test": "cross-env NODE_ENV=test jest --maxWorkers=2 --forceExit",
        "test:watch": "cross-env NODE_ENV=test jest --watch --forceExit",
        "test:cov": "cross-env NODE_ENV=test jest --coverage --forceExit",
        "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --forceExit",
        "docker:start": "docker compose -f ./docker/docker-compose.yml up -d",
        "docker:stop": "docker compose -f ./docker/docker-compose.yml stop",
        "db:debug": "mikro-orm debug",
        "db:drop": "mikro-orm schema:drop --fk-checks --drop-migrations-table -r",
        "db:rollup": "yarn db:drop && yarn db:migrate",
        "db:migrate": "mikro-orm migration:up",
        "db:migrate:revert": "mikro-orm migration:down",
        "db:migrate:generate": "mikro-orm migration:create",
        "db:migrate:create": "mikro-orm migration:create -b",
        "db:seed:dev": "cross-env TARGET=seeds-dev mikro-orm migration:up",
        "db:seed:dev:create": "cross-env TARGET=seeds-dev mikro-orm migration:create -b",
        "db:seed:dev:revert": "cross-env TARGET=seeds-dev mikro-orm migration:down",
        "db:seed:stag": "cross-env TARGET=seeds-stag mikro-orm migration:up",
        "db:seed:stag:create": "cross-env TARGET=seeds-stag mikro-orm migration:create -b",
        "db:seed:stag:revert": "cross-env TARGET=seeds-stag mikro-orm migration:down",
        "db:seed:prod": "cross-env TARGET=seeds-prod mikro-orm migration:up",
        "db:seed:prod:create": "cross-env TARGET=seeds-prod mikro-orm migration:create -b",
        "db:seed:prod:revert": "cross-env TARGET=seeds-prod mikro-orm migration:down",
        "deps:update:check": "ncu",
        "deps:update:fix": "ncu -u"
    },
    "dependencies": {
        "@mikro-orm/core": "^5.6.15",
        "@mikro-orm/nestjs": "^5.1.7",
        "@mikro-orm/postgresql": "^5.6.15",
        "@mikro-orm/sql-highlighter": "^1.0.1",
        "@nestjs/common": "^9.3.12",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.3.12",
        "@nestjs/platform-express": "^9.3.12",
        "@nestjs/swagger": "^6.2.1",
        "@nestjs/throttler": "^4.0.0",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "connect-redis": "^7.0.1",
        "date-fns": "^2.29.3",
        "express-basic-auth": "^1.2.1",
        "express-session": "^1.17.3",
        "helmet": "^6.0.1",
        "ioredis": "^5.3.1",
        "nestjs-throttler-storage-redis": "^0.3.0",
        "pino": "^8.11.0",
        "pino-pretty": "^10.0.0",
        "ramda": "^0.28.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "swagger-ui-express": "^4.6.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@mikro-orm/cli": "^5.6.15",
        "@mikro-orm/migrations": "^5.6.15",
        "@nestjs/cli": "^9.3.0",
        "@nestjs/schematics": "^9.0.4",
        "@nestjs/testing": "^9.3.12",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/connect-redis": "^0.0.20",
        "@types/dotenv-safe": "^8.1.2",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.9",
        "@types/ramda": "^0.28.23",
        "@types/readline-sync": "^1.4.4",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "cross-env": "^7.0.3",
        "dotenv-safe": "^8.2.0",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-unicorn": "^46.0.0",
        "jest": "^29.5.0",
        "npm-check-updates": "^16.8.0",
        "prettier": "^2.8.7",
        "readline-sync": "^1.4.10",
        "rimraf": "^4.4.1",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "typescript": "^5.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "@libs/logger/(.*)": "<rootDir>/libs/logger/src/$1",
            "@libs/logger": "<rootDir>/libs/logger/src",
            "@libs/common/(.*)": "<rootDir>/libs/common/src/$1",
            "@libs/common": "<rootDir>/libs/common/src",
            "@libs/models/(.*)": "<rootDir>/libs/models/src/$1",
            "@libs/models": "<rootDir>/libs/models/src",
            "@libs/testing/(.*)": "<rootDir>/libs/testing/src/$1",
            "@libs/testing": "<rootDir>/libs/testing/src"
        }
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./data/data.config.ts"
        ]
    }
}
