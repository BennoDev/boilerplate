{
    "name": "boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "start": "yarn nx serve",
        "build": "yarn nx build",
        "lint": "yarn nx lint",
        "lint:all": "yarn nx run-many --target=lint --all",
        "lint:testing": "eslint ./libs/testing --no-eslintrc --config ./libs/testing/.eslintrc.json",
        "test": "yarn nx test",
        "test:all": "yarn nx run-many --target=test --all --parallel=1 --runInBand --skip-nx-cache",
        "test:raw": "cross-env NODE_ENV=test jest --forceExit",
        "db:debug": "mikro-orm debug",
        "db:drop": "mikro-orm schema:drop --fk-checks --drop-migrations-table -r",
        "db:rollup": "yarn db:drop && yarn db:migrate",
        "db:migrate": "mikro-orm migration:up",
        "db:migrate:create": "mikro-orm migration:create -b",
        "db:migrate:generate": "mikro-orm migration:create",
        "db:migrate:revert": "mikro-orm migration:down",
        "db:seed": "mikro-orm seeder:run",
        "db:seed:create": "mikro-orm seeder:create",
        "docker:start": "docker compose -f ./docker/docker-compose.yml up -d",
        "docker:stop": "docker compose -f ./docker/docker-compose.yml stop",
        "deps:update:check": "ncu",
        "deps:update:fix": "ncu -u",
        "prepare": "husky install"
    },
    "private": true,
    "dependencies": {
        "@mikro-orm/core": "^5.9.4",
        "@mikro-orm/nestjs": "^5.2.2",
        "@mikro-orm/postgresql": "^5.9.4",
        "@mikro-orm/seeder": "^5.9.4",
        "@mikro-orm/sql-highlighter": "^1.0.1",
        "@nestjs/common": "^10.0.2",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.0.2",
        "@nestjs/platform-express": "^10.0.2",
        "@nestjs/swagger": "^7.1.16",
        "@nestjs/terminus": "^10.2.0",
        "@nestjs/throttler": "^5.1.0",
        "@types/compression": "^1.7.5",
        "@types/express-session": "^1.17.10",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "connect-redis": "^7.1.0",
        "date-fns": "^2.30.0",
        "express-basic-auth": "^1.2.1",
        "express-session": "^1.17.3",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "nestjs-throttler-storage-redis": "^0.4.1",
        "pino": "^8.16.2",
        "ramda": "^0.29.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "swagger-ui-express": "^5.0.0",
        "tslib": "^2.3.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.3.1",
        "@mikro-orm/cli": "^5.9.4",
        "@mikro-orm/migrations": "^5.9.4",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.0.2",
        "@nx/eslint": "17.2.0",
        "@nx/eslint-plugin": "17.2.0",
        "@nx/jest": "17.2.0",
        "@nx/js": "17.2.0",
        "@nx/nest": "17.2.0",
        "@nx/node": "17.2.0",
        "@nx/webpack": "17.2.0",
        "@nx/workspace": "17.2.0",
        "@swc-node/register": "~1.6.7",
        "@swc/core": "~1.3.85",
        "@types/bcrypt": "^5.0.2",
        "@types/dotenv-safe": "^8.1.5",
        "@types/jest": "^29.4.0",
        "@types/node": "18.16.9",
        "@types/ramda": "^0.29.9",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "@typestrong/ts-mockito": "^2.6.6",
        "cross-env": "^7.0.3",
        "dotenv-safe": "^8.2.0",
        "eslint": "~8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-unicorn": "^49.0.0",
        "husky": "^8.0.3",
        "jest": "^29.4.1",
        "jest-environment-node": "^29.4.1",
        "lint-staged": "^15.2.0",
        "npm-check-updates": "^16.14.11",
        "nx": "17.2.0",
        "pino-pretty": "^10.2.3",
        "prettier": "^2.6.2",
        "readline-sync": "^1.4.10",
        "ts-jest": "^29.1.0",
        "ts-node": "10.9.1",
        "typescript": "~5.2.2",
        "url-loader": "^4.1.1"
    },
    "mikro-orm": {
        "useTsNode": true,
        "tsConfigPath": "./tsconfig.base.json",
        "configPaths": [
            "./data/data.config.ts"
        ]
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --cache --fix"
        ],
        "*.{js,ts,css,md,json}": "yarn nx format:write --uncommitted"
    }
}
